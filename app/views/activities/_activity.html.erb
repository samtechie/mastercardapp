<li id="activity-<%= activity.id %>">
  <span class="user"><%= link_to activity.user.name, activity.user %></span>
  <span class="subject"><%= activity.subject %></span>
  <span class="content"><%= activity.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(activity.created_at) %> ago.
  </span>
</li>